@{
    ViewData["Title"] = "AI Workspace";
}

<div class="main-wrapper">
    <div class="sidebar">
        <div class="sidebar-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0 fw-bold text-dark"><i class="bi bi-robot me-2 text-primary"></i>RagAI</h5>
            <span class="badge bg-light text-secondary border">v3.0</span>
        </div>

        <div class="sidebar-content">
            <div class="card border-dashed shadow-sm mb-4 text-center p-3 bg-light"
                style="border-style: dashed !important; border-color: #cbd5e1;">
                <i class="bi bi-file-earmark-pdf text-primary fs-3 mb-2"></i>
                <h6 class="small fw-bold mb-1">Doküman Yükle</h6>
                <input type="file" id="fileInput" class="form-control form-control-sm mb-2" accept=".pdf" />
                <button onclick="uploadPdf()" id="btnUpload" class="btn btn-primary btn-sm w-100">
                    <i class="bi bi-upload me-1"></i> Analiz Et
                </button>
            </div>

            <button onclick="startQuiz()" id="btnQuiz" class="btn btn-warning w-100 mb-4 text-white fw-bold shadow-sm"
                style="display:none;">
                <i class="bi bi-mortarboard-fill me-2"></i>Sınav Modu
            </button>

            <div id="summaryContainer">
                <h6 class="text-uppercase text-muted small fw-bold mb-3"><i class="bi bi-card-text me-1"></i>Belge Özeti
                </h6>
                <div id="summaryArea" class="small text-muted fst-italic">
                    Henüz bir belge yüklenmedi. Analiz sonucu burada görünecek.
                </div>
            </div>
        </div>

        <div class="p-3 border-top text-center">
            <small class="text-muted" style="font-size: 0.7rem;">Mete Yıldırım | AI Powered</small>
        </div>
    </div>

    <div class="chat-area">
        <div id="chatBox" class="chat-messages">
            <div class="message-wrapper ai fade-in">
                <div class="avatar ai"><i class="bi bi-stars"></i></div>
                <div class="message-bubble">
                    Merhaba! Ben senin yapay zeka asistanınım.
                    <br>Soldaki panelden bir PDF yükle, içeriğini tartışalım veya seni sınav yapayım! 🚀
                </div>
            </div>
        </div>

        <div class="chat-input-area">
            <div class="input-group input-group-lg shadow-sm rounded-pill overflow-hidden border">
                <input type="text" id="questionInput" class="form-control border-0 fs-6 ps-4"
                    placeholder="Doküman hakkında bir soru sorun..."
                    onkeydown="if(event.key === 'Enter') askQuestion()">
                <button onclick="askQuestion()" id="btnAsk" class="btn btn-primary px-4 border-0">
                    <i class="bi bi-send-fill"></i>
                </button>
            </div>
            <div class="text-center mt-2">
                <small class="text-muted" style="font-size: 0.75rem;">Yapay zeka hata yapabilir. Cevapları kontrol
                    edin.</small>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="quizModal" tabindex="-1" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-warning text-white border-0">
                <h5 class="modal-title fw-bold"><i class="bi bi-patch-question-fill me-2"></i>Belge Sınavı</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4 bg-light" id="quizBody"></div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Kapat</button>
                <button type="button" class="btn btn-primary" onclick="checkAnswers()" id="btnFinishQuiz"
                    style="display:none;">Sınavı Bitir</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let currentQuizData = [];

        async function uploadPdf() {
            const fileInput = document.getElementById('fileInput');
            const summaryArea = document.getElementById('summaryArea');
            const btn = document.getElementById('btnUpload');
            const btnQuiz = document.getElementById('btnQuiz');

            if (fileInput.files.length === 0) { alert("Dosya seçiniz!"); return; }

            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';
            summaryArea.innerHTML = '<div class="text-center py-3"><span class="spinner-border spinner-border-sm text-primary"></span><div class="small mt-2">Analiz ediliyor...</div></div>';

            const formData = new FormData();
            formData.append("file", fileInput.files[0]);

            try {
                const response = await fetch('/Home/UploadPdf', { method: 'POST', body: formData });
                const result = await response.json();

                if (result.success) {
                    summaryArea.innerHTML = result.summary;
                    summaryArea.classList.remove('text-muted', 'fst-italic');

                    addBotMessage(`<strong>${fileInput.files[0].name}</strong> başarıyla analiz edildi. Veritabanına kaydedildi.`);
                    btnQuiz.style.display = 'block';
                } else {
                    summaryArea.innerHTML = `<span class="text-danger">${result.message}</span>`;
                }
            } catch (error) {
                console.error(error);
                summaryArea.innerHTML = "Hata oluştu.";
            } finally {
                btn.disabled = false;
                btn.innerHTML = '<i class="bi bi-upload me-1"></i> Analiz Et';
            }
        }

        async function askQuestion() {
            const input = document.getElementById('questionInput');
            const question = input.value.trim();
            if (!question) return;

            addUserMessage(question);
            input.value = '';
            input.disabled = true;

            const loadingId = addBotLoading();

            try {
                const formData = new FormData();
                formData.append("question", question);

                const response = await fetch('/Home/AskQuestion', { method: 'POST', body: formData });
                const result = await response.json();

                removeMessage(loadingId);
                addBotMessage(result.answer, result.page);
            } catch (error) {
                removeMessage(loadingId);
                addBotMessage("Bağlantı hatası.");
            } finally {
                input.disabled = false;
                input.focus();
            }
        }

        function addUserMessage(text) {
            const chatBox = document.getElementById('chatBox');
            chatBox.innerHTML += `
                    <div class="message-wrapper user fade-in">
                        <div class="avatar user"><i class="bi bi-person-fill"></i></div>
                        <div class="message-bubble">${text}</div>
                    </div>`;
            scrollToBottom();
        }

        function addBotMessage(text, pageNumber) {
            const chatBox = document.getElementById('chatBox');
            let formattedText = text.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>').replace(/\n/g, '<br>');

            let citationHtml = '';
            if (pageNumber && pageNumber > 0) {
                citationHtml = `<div class="mt-1"><span class="citation-badge"><i class="bi bi-bookmark-fill me-1"></i>Kaynak: Sayfa ${pageNumber}</span></div>`;
            }

            chatBox.innerHTML += `
                    <div class="message-wrapper ai fade-in">
                        <div class="avatar ai"><i class="bi bi-stars"></i></div>
                        <div class="message-bubble">${formattedText} ${citationHtml}</div>
                    </div>`;
            scrollToBottom();
        }

        function addBotLoading() {
            const chatBox = document.getElementById('chatBox');
            const id = "loading_" + Date.now();
            chatBox.innerHTML += `
                    <div id="${id}" class="message-wrapper ai fade-in">
                        <div class="avatar ai"><i class="bi bi-stars"></i></div>
                        <div class="message-bubble">
                            <div class="typing-indicator"><span></span><span></span><span></span></div>
                        </div>
                    </div>`;
            scrollToBottom();
            return id;
        }

        function removeMessage(id) {
            const el = document.getElementById(id);
            if (el) el.remove();
        }

        function scrollToBottom() {
            const chatBox = document.getElementById('chatBox');
            chatBox.scrollTop = chatBox.scrollHeight;
        }

        async function startQuiz() {
            const quizModal = new bootstrap.Modal(document.getElementById('quizModal'));
            quizModal.show();
            const quizBody = document.getElementById('quizBody');
            const btnFinish = document.getElementById('btnFinishQuiz');

            quizBody.innerHTML = '<div class="text-center py-5"><div class="spinner-border text-warning"></div><p class="mt-3 text-muted">Sorular hazırlanıyor...</p></div>';
            btnFinish.style.display = 'none';

            try {
                const response = await fetch('/Home/CreateQuiz', { method: 'POST' });
                const result = await response.json();
                if (result.success) {
                    currentQuizData = JSON.parse(result.quizData);
                    renderQuiz(currentQuizData);
                    btnFinish.style.display = 'block';
                } else {
                    quizBody.innerHTML = `<div class="alert alert-danger">${result.message}</div>`;
                }
            } catch (e) { quizBody.innerHTML = "Hata oluştu."; }
        }

        function renderQuiz(questions) {
            let html = '<div class="d-flex flex-column gap-4">';
            questions.forEach((q, i) => {
                html += `
                        <div class="card border-0 shadow-sm" id="q_card_${i}">
                            <div class="card-body">
                                <h6 class="fw-bold mb-3">${i + 1}. ${q.question}</h6>
                                <div class="list-group">
                                    ${q.options.map((opt, optIndex) => `
                                        <label class="list-group-item list-group-item-action" style="cursor:pointer">
                                            <input class="form-check-input me-2" type="radio" name="q_${i}" value="${optIndex}"> ${opt}
                                        </label>
                                    `).join('')}
                                </div>
                                <div class="result-msg mt-2 fw-bold" style="display:none"></div>
                            </div>
                        </div>`;
            });
            document.getElementById('quizBody').innerHTML = html + '</div>';
        }

        function checkAnswers() {
            let correct = 0;
            currentQuizData.forEach((q, i) => {
                const selected = document.querySelector(`input[name="q_${i}"]:checked`);
                const card = document.getElementById(`q_card_${i}`);
                const msg = card.querySelector('.result-msg');
                const opts = card.querySelectorAll('.list-group-item');

                opts.forEach(o => o.classList.remove('bg-success', 'bg-danger', 'text-white'));
                msg.style.display = 'block';

                if (selected) {
                    const val = parseInt(selected.value);
                    if (val === q.correctAnswer) {
                        correct++;
                        opts[val].classList.add('bg-success', 'text-white');
                        msg.innerHTML = '<span class="text-success">✅ Doğru</span>';
                    } else {
                        opts[val].classList.add('bg-danger', 'text-white');
                        opts[q.correctAnswer].classList.add('bg-success', 'text-white');
                        msg.innerHTML = '<span class="text-danger">❌ Yanlış</span>';
                    }
                } else {
                    opts[q.correctAnswer].classList.add('bg-success', 'text-white');
                    msg.innerHTML = '<span class="text-warning">⚠️ Boş</span>';
                }
            });
            alert(`Sonuç: ${correct} / ${currentQuizData.length}`);
            document.getElementById('btnFinishQuiz').disabled = true;
        }
    </script>
}